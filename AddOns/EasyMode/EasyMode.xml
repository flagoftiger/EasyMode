<Ui xmlns = "http://www.blizzard.com/wow/ui/" xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation = "http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="EasyMode.lua"/>
	<!-- Worn trinkets template -->
	<Frame name="Indicator" parent="UIParent">
		<Size x="2" y="2"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="IndicatorTexture"  file="Interface\ChatFrame\ChatFrameBackground" setAllPoints="true">
					<Color r="0.0" g="0.0" b="0.0" a="1"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				OnLoad(self)
			</OnLoad>
			<OnEvent>
				OnEvent(self, event, ...)
			</OnEvent>
			<OnUpdate>
				OnUpdate(self, elapsed)
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>